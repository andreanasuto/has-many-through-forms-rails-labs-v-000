<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content %>
  <% end %>
<%= @post.comments.map(&:user).uniq.each { |user| %>
  <%= link_to user.username, user_path(user) %>
<% } %>

<%= form_for %>
  <%= f.hidden_field :some_column, value: comment.post_id = @post.id  %>
  <%= f.submit %>
<% end %>
