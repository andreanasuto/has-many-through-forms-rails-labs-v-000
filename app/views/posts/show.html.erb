<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content %>
  <% end %>
<%= @post.comments.map(&:user).uniq.each { |user| %>
  <%= link_to user.username, user_path(user) %>
<% } %>

<%= form_for @post, :url => { :controller => 'comments', :action => "create" } do |f| %>
  <%= fields_for :comment, @post.comments.build do |comment_field| %>
    <%= comment_field.text_field :content %>
  <% end %>
  <%= f.submit "Create comment" %>
<% end %>
