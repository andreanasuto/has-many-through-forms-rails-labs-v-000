<h1> <%= @post.title %> </h1>
<p><%= @post.content %></p>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<%= @post.comments.each do |comment| %>
  <%= comment.content %>
  <% end %>
<%= @post.comments.map(&:user).uniq.each { |user| %>
  <%= link_to user.username, user_path(user) %>
<% } %>

<br><br>

<%= form_for @comment do |f| %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
